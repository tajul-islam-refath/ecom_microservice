{
  "compileOnSave": false,
  "compilerOptions": {
    "module": "commonjs",
    "lib": ["ES6"],
    "allowJs": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "ESNext",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "rootDir": ".",
    "outDir": "./dist",
    "baseUrl": "./src",
    "typeRoots": ["./src/types", "./node_modules/@types"],
    "types": ["node", "express"],
    "paths": {
      "@/*": ["*"]
    }
  }
}
